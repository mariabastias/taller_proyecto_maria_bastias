@page "/mensajes/chat/{propuestaId:int}"
@rendermode InteractiveServer
@attribute [Authorize]
@using Microsoft.AspNetCore.Components.Forms
@using TruequeTextil.Shared.Models

<div class="min-vh-100 bg-stone-50">
    <!-- Header -->
    <div class="bg-white border-bottom border-stone-200 sticky-top">
        <div class="container" style="max-width: 896px;">
            <div class="px-4 py-3 d-flex align-items-center justify-content-between">
                <button @onclick="VolverAtras"
                    class="btn btn-link text-stone-600 text-decoration-none d-flex align-items-center gap-2 p-0">
                    <i class="bi bi-arrow-left"></i>
                    <span class="small">Mensajes</span>
                </button>

                <h1 class="h6 fw-semibold text-stone-900 mb-0">Chat</h1>

                <div style="width: 4rem;"></div>
            </div>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="container" style="max-width: 896px;">
        @if (cargando)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-amber-600" role="status">
                    <span class="visually-hidden">Cargando chat...</span>
                </div>
            </div>
        }
        else if (propuesta == null)
        {
            <div class="text-center py-5">
                <div class="bg-white rounded-4 shadow p-5">
                    <i class="bi bi-exclamation-triangle text-stone-300" style="font-size: 64px;"></i>
                    <h3 class="mt-3 text-stone-600">Propuesta no encontrada</h3>
                    <p class="text-stone-500 mb-4">La propuesta de trueque no existe o no tienes permisos para verla.</p>
                    <button @onclick="VolverAtras" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Volver
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- Info de la propuesta -->
            <div class="bg-white rounded-4 shadow p-4 mb-4">
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="bg-amber-600 rounded-circle d-flex align-items-center justify-content-center text-white fw-bold small" style="width: 2rem; height: 2rem;">
                        <i class="bi bi-arrow-left-right"></i>
                    </div>
                    <h2 class="text-stone-900 fw-medium mb-0">Propuesta de trueque</h2>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="border border-stone-200 rounded-3 p-3">
                            <h6 class="text-stone-700 mb-2">Prenda ofrecida</h6>
                            <div class="d-flex align-items-center gap-3">
                                <img src="@propuesta.PrendaOfrecida?.ImagenPrincipal" alt="@propuesta.PrendaOfrecida?.Titulo"
                                     class="rounded" style="width: 3rem; height: 3rem; object-fit: cover;"
                                     onerror="this.src='/images/placeholder.png'" />
                                <div>
                                    <p class="text-stone-900 fw-medium mb-0 small">@propuesta.PrendaOfrecida?.Titulo</p>
                                    <p class="text-stone-500 mb-0 small">@propuesta.PrendaOfrecida?.Tipo</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border border-stone-200 rounded-3 p-3">
                            <h6 class="text-stone-700 mb-2">Prenda solicitada</h6>
                            <div class="d-flex align-items-center gap-3">
                                <img src="@propuesta.PrendaSolicitada?.ImagenPrincipal" alt="@propuesta.PrendaSolicitada?.Titulo"
                                     class="rounded" style="width: 3rem; height: 3rem; object-fit: cover;"
                                     onerror="this.src='/images/placeholder.png'" />
                                <div>
                                    <p class="text-stone-900 fw-medium mb-0 small">@propuesta.PrendaSolicitada?.Titulo</p>
                                    <p class="text-stone-500 mb-0 small">@propuesta.PrendaSolicitada?.Tipo</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <span class="badge @GetEstadoBadgeClass(propuesta.EstadoPropuestaId)">@GetEstadoNombre(propuesta.EstadoPropuestaId)</span>
                </div>
            </div>

            <!-- Mensajes -->
            <div class="bg-white rounded-4 shadow mb-4" style="height: 60vh; display: flex; flex-direction: column;">
                <div class="p-4 border-bottom border-stone-200">
                    <h3 class="text-stone-900 fw-medium mb-0">Mensajes</h3>
                </div>

                <!-- Lista de mensajes -->
                <div class="flex-grow-1 overflow-auto p-4" id="messagesContainer">
                    @if (mensajes.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-chat-dots text-stone-300" style="font-size: 48px;"></i>
                            <p class="text-stone-500 mt-3">No hay mensajes aun. Â¡Inicia la conversacion!</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var mensaje in mensajes.OrderBy(m => m.FechaEnvio))
                        {
                            @if (mensaje.UsuarioId == 0) // System message
                            {
                                <div class="text-center mb-3">
                                    <div class="bg-stone-200 text-stone-600 rounded-3 px-3 py-2 d-inline-block">
                                        <p class="mb-0 small">@mensaje.MensajeTexto</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex mb-3 @(mensaje.UsuarioId == currentUser?.UsuarioId ? "justify-content-end" : "justify-content-start")">
                                    <div class="d-flex gap-3 @(mensaje.UsuarioId == currentUser?.UsuarioId ? "flex-row-reverse" : "")" style="max-width: 70%;">
                                        <!-- Avatar -->
                                        <div class="flex-shrink-0">
                                            @if (!string.IsNullOrEmpty(mensaje.Usuario?.UrlFotoPerfil) && !mensaje.Usuario.UrlFotoPerfil.Contains("default"))
                                            {
                                                <img src="@mensaje.Usuario?.UrlFotoPerfil" alt="@mensaje.Usuario?.Nombre"
                                                     class="rounded-circle" style="width: 2rem; height: 2rem; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-amber-600 rounded-circle d-flex align-items-center justify-content-center text-white fw-medium"
                                                     style="width: 2rem; height: 2rem; font-size: 0.75rem;">
                                                    @GetIniciales(mensaje.Usuario?.Nombre ?? "?")
                                                </div>
                                            }
                                        </div>

                                        <!-- Mensaje -->
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center gap-2 mb-1">
                                                <span class="small fw-medium text-stone-900">@mensaje.Usuario?.Nombre</span>
                                                <span class="small text-stone-500">@FormatearFecha(mensaje.FechaEnvio)</span>
                                            </div>
                                            <div class="bg-@(mensaje.UsuarioId == currentUser?.UsuarioId ? "amber-600 text-white" : "stone-100 text-stone-900") rounded-3 p-3">
                                                <p class="mb-0 small">@mensaje.MensajeTexto</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>

                <!-- Input para enviar mensaje -->
                @if (puedeEnviarMensaje)
                {
                    <div class="p-4 border-top border-stone-200">
                        @if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="alert alert-danger rounded-3 mb-3 small">
                                @mensajeError
                            </div>
                        }

                        @if (selectedFile != null)
                        {
                            <div class="bg-stone-100 rounded-3 p-3 mb-3 d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="bi bi-file-earmark text-stone-600"></i>
                                    <div>
                                        <p class="text-stone-900 fw-medium mb-0 small">@selectedFile.Name</p>
                                        <p class="text-stone-500 mb-0 small">@((selectedFile.Size / 1024.0).ToString("F1")) KB</p>
                                    </div>
                                </div>
                                <button @onclick="RemoveFile" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-x"></i>
                                </button>
                            </div>
                        }

                        <div class="d-flex gap-3">
                            <div class="flex-grow-1">
                                <input @bind="nuevoMensaje" @onkeydown="HandleKeyDown"
                                       type="text" class="form-control rounded-3 focus-ring-amber"
                                       placeholder="Escribe tu mensaje..." maxlength="1000" />
                                <small class="text-stone-500 mt-1 d-block">@nuevoMensaje.Length/1000 caracteres</small>
                            </div>
                            <InputFile OnChange="OnFileSelected" class="d-none" id="fileInput" accept="image/*,.pdf,.doc,.docx" />
                            <label for="fileInput" class="btn btn-outline-secondary px-3">
                                <i class="bi bi-paperclip"></i>
                            </label>
                            <button @onclick="EnviarMensaje" disabled="@(enviando || (string.IsNullOrWhiteSpace(nuevoMensaje) && selectedFile == null))"
                                    class="btn btn-primary px-4">
                                @if (enviando || uploadingFile)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                }
                                else
                                {
                                    <i class="bi bi-send"></i>
                                }
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="p-4 border-top border-stone-200 bg-stone-50">
                        <p class="text-stone-600 small mb-0 text-center">
                            No puedes enviar mensajes en esta propuesta.
                        </p>
                    </div>
                }
            </div>
        }
    </div>
</div>