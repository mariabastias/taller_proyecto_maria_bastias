@page "/proponer-trueque/{prendaId:int}"
@rendermode InteractiveServer
@attribute [Authorize]
@using TruequeTextil.Features.ProponerTrueque.Interfaces
@using TruequeTextil.Shared.Models

<div class="min-vh-100 bg-stone-50 py-4">
    <div class="container">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-amber-500" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (prendaDestino == null)
        {
            <div class="text-center py-5">
                <div class="bg-white rounded-4 shadow p-4">
                    <i class="bi bi-shirt text-stone-400" style="font-size: 48px;"></i>
                    <h3 class="mt-3 text-stone-600">Prenda no encontrada</h3>
                    <p class="text-stone-500">La prenda que buscas proponer no existe o no está disponible.</p>
                    <button @onclick="VolverAExplorar" class="btn btn-primary mt-3">
                        Volver a explorar
                    </button>
                </div>
            </div>
        }
        else if (mostrarConfirmacion)
        {
            <div class="text-center py-5">
                <div class="bg-white rounded-4 shadow p-4 p-md-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 64px;"></i>
                        <h1 class="fs-3 fw-bold text-stone-900 mb-2 mt-3">¡Propuesta Enviada!</h1>
                        <p class="text-stone-600">Tu propuesta de trueque ha sido enviada exitosamente.</p>
                        <div class="bg-amber-50 border border-amber-200 rounded-3 p-3 mt-4">
                            <p class="text-amber-800 small mb-0">
                                <i class="bi bi-info-circle me-1"></i>
                                El usuario tiene 7 días para responder a tu propuesta.
                            </p>
                        </div>
                    </div>
                    <div class="d-flex gap-3 justify-content-center">
                        <button @onclick="VolverAExplorar" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-1"></i>
                            Volver a explorar
                        </button>
                        <button @onclick="VerMisPropuestas" class="btn btn-outline-primary">
                            <i class="bi bi-eye me-1"></i>
                            Ver mis propuestas
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/explorar" class="text-decoration-none">Explorar</a></li>
                    <li class="breadcrumb-item"><a href="/perfil-publico/@prendaDestino.UsuarioId" class="text-decoration-none">@prendaDestino.Usuario?.Nombre</a></li>
                    <li class="breadcrumb-item"><a href="/detalle-prenda/@PrendaId" class="text-decoration-none">@prendaDestino.TituloPublicacion</a></li>
                    <li class="breadcrumb-item active">Proponer trueque</li>
                </ol>
            </nav>

            <div class="row g-4">
                <!-- Prenda que solicitas -->
                <div class="col-lg-6">
                    <div class="bg-white rounded-4 shadow p-4">
                        <h3 class="fs-5 fw-bold text-stone-900 mb-4">
                            <i class="bi bi-heart-fill text-amber-500 me-2"></i>
                            Prenda que solicitas
                        </h3>
                        
                        <div class="border border-stone-200 rounded-3 p-3">
                            <div class="d-flex">
                                <img src="@(string.IsNullOrEmpty(prendaDestino.Imagen) ? "/images/default-clothing.png" : prendaDestino.Imagen)"
                                     class="rounded-3 me-3 border"
                                     style="width: 80px; height: 80px; object-fit: cover;" alt="@prendaDestino.TituloPublicacion" />
                                <div class="flex-grow-1">
                                    <h4 class="fs-6 fw-bold text-stone-900 mb-1">@prendaDestino.TituloPublicacion</h4>
                                    <p class="text-stone-600 small mb-2">@prendaDestino.DescripcionPublicacion</p>
                                    <div class="d-flex gap-2">
                                        <span class="badge bg-amber-100 text-amber-800">@prendaDestino.Tipo</span>
                                        <span class="badge bg-stone-100 text-stone-700">@prendaDestino.Talla</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-3 pt-3 border-top border-stone-100">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(prendaDestino.Usuario?.UrlFotoPerfil) ? "/images/default-avatar.png" : prendaDestino.Usuario?.UrlFotoPerfil)"
                                             class="rounded-circle me-2 border border-2 border-stone-200"
                                             style="width: 32px; height: 32px; object-fit: cover;" />
                                        <div>
                                            <div class="fw-medium text-stone-900 small">@prendaDestino.Usuario?.Nombre @prendaDestino.Usuario?.Apellido</div>
                                            <div class="text-stone-500 small">Propietario de la prenda</div>
                                        </div>
                                    </div>
                                    @if (estadoPropuestasSolicitada.HasValue)
                                    {
                                        <div>
                                            <span class="badge @(estadoPropuestasSolicitada.Value.Activas >= estadoPropuestasSolicitada.Value.Maximo ? "bg-danger" : "bg-info") rounded-pill px-2 py-1 small">
                                                <i class="bi bi-clock-history me-1"></i>
                                                @estadoPropuestasSolicitada.Value.Activas/@estadoPropuestasSolicitada.Value.Maximo propuestas
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Prenda que ofreces -->
                <div class="col-lg-6">
                    <div class="bg-white rounded-4 shadow p-4">
                        <h3 class="fs-5 fw-bold text-stone-900 mb-4">
                            <i class="bi bi-arrow-left-right text-amber-500 me-2"></i>
                            Prenda que ofreces
                        </h3>

                        @if (misPrendas.Count == 0)
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-box-seam text-stone-400" style="font-size: 48px;"></i>
                                <h4 class="mt-3 text-stone-600">No tienes prendas disponibles</h4>
                                <p class="text-stone-500">Publica una prenda primero para poder proponer trueques.</p>
                                <button @onclick="PublicarPrenda" class="btn btn-primary mt-2">
                                    <i class="bi bi-plus-circle me-1"></i>
                                    Publicar prenda
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label for="prendaSelect" class="form-label fw-medium text-stone-900">Selecciona una de tus prendas:</label>
                                <select id="prendaSelect" class="form-select" @bind="prendaSeleccionadaId" @bind:after="ActualizarEstadoPrendaOfrecida">
                                    <option value="0">Elige una prenda...</option>
                                    @foreach (var prenda in misPrendas)
                                    {
                                        <option value="@prenda.PrendaId">@prenda.TituloPublicacion (@prenda.Talla)</option>
                                    }
                                </select>
                                <small class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Solo se muestran prendas disponibles para intercambio
                                </small>
                            </div>

                            @if (prendaSeleccionadaId > 0)
                            {
                                var prendaSeleccionada = misPrendas.FirstOrDefault(p => p.PrendaId == prendaSeleccionadaId);
                                if (prendaSeleccionada != null)
                                {
                                    <div class="border border-stone-200 rounded-3 p-3 bg-stone-25">
                                        <div class="d-flex">
                                            <img src="@(string.IsNullOrEmpty(prendaSeleccionada.Imagen) ? "/images/default-clothing.png" : prendaSeleccionada.Imagen)"
                                                 class="rounded-3 me-3 border"
                                                 style="width: 80px; height: 80px; object-fit: cover;" alt="@prendaSeleccionada.TituloPublicacion" />
                                            <div class="flex-grow-1">
                                                <h4 class="fs-6 fw-bold text-stone-900 mb-1">@prendaSeleccionada.TituloPublicacion</h4>
                                                <p class="text-stone-600 small mb-2">@prendaSeleccionada.DescripcionPublicacion</p>
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <span class="badge bg-stone-100 text-stone-700">@prendaSeleccionada.Tipo</span>
                                                    <span class="badge bg-stone-100 text-stone-700">@prendaSeleccionada.Talla</span>
                                                    @if (estadoPropuestasOfrecida.HasValue)
                                                    {
                                                        <span class="badge @(estadoPropuestasOfrecida.Value.Activas >= estadoPropuestasOfrecida.Value.Maximo ? "bg-danger" : "bg-success") rounded-pill">
                                                            <i class="bi bi-clock-history me-1"></i>
                                                            @estadoPropuestasOfrecida.Value.Activas/@estadoPropuestasOfrecida.Value.Maximo propuestas
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Mensaje y límite de propuestas -->
            @if (misPrendas.Count > 0)
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="bg-white rounded-4 shadow p-4">
                            <h3 class="fs-5 fw-bold text-stone-900 mb-4">
                                <i class="bi bi-chat-text text-amber-500 me-2"></i>
                                Mensaje para el propietario (opcional)
                            </h3>
                            
                            <div class="mb-4">
                                <textarea @bind="mensajeAcompanante" 
                                         class="form-control" 
                                         rows="4" 
                                         maxlength="500"
                                         placeholder="Escribe un mensaje personalizado para explicar por qué esta prenda te interesa o cualquier detalle adicional..."></textarea>
                                <div class="form-text text-end">
                                    @(mensajeAcompanante?.Length ?? 0)/500 caracteres
                                </div>
                            </div>

                            <!-- RF-09: Indicador de límite de propuestas -->
                            @if (mensajeError != null)
                            {
                                <div class="alert alert-danger d-flex align-items-start" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                                    <div>
                                        <strong>No se puede enviar la propuesta</strong>
                                        <p class="mb-0 mt-1">@mensajeError</p>
                                    </div>
                                </div>
                            }
                            else if (estadoPropuestasSolicitada.HasValue || estadoPropuestasOfrecida.HasValue)
                            {
                                var limiteSolicitadaAlcanzado = estadoPropuestasSolicitada?.Activas >= estadoPropuestasSolicitada?.Maximo;
                                var limiteOfrecidaAlcanzado = estadoPropuestasOfrecida?.Activas >= estadoPropuestasOfrecida?.Maximo;
                                var algunLimiteAlcanzado = limiteSolicitadaAlcanzado || limiteOfrecidaAlcanzado;

                                <div class="alert @(algunLimiteAlcanzado ? "alert-warning" : "alert-info") border-start border-4">
                                    <div class="d-flex align-items-start">
                                        <i class="bi @(algunLimiteAlcanzado ? "bi-exclamation-triangle-fill" : "bi-info-circle-fill") me-2 fs-5"></i>
                                        <div class="flex-grow-1">
                                            <h6 class="alert-heading mb-2">
                                                <strong>Límite de propuestas activas (RF-09)</strong>
                                            </h6>
                                            <p class="mb-2 small">
                                                Cada prenda puede tener un máximo de <strong>3 propuestas activas</strong> simultáneas.
                                                Las propuestas expiran automáticamente después de 7 días sin respuesta.
                                            </p>

                                            <div class="small">
                                                @if (estadoPropuestasSolicitada.HasValue)
                                                {
                                                    <div class="mb-1">
                                                        <span class="badge @(limiteSolicitadaAlcanzado ? "bg-danger" : "bg-info") me-1">
                                                            @estadoPropuestasSolicitada.Value.Activas/@estadoPropuestasSolicitada.Value.Maximo
                                                        </span>
                                                        <span>Prenda solicitada</span>
                                                        @if (limiteSolicitadaAlcanzado)
                                                        {
                                                            <span class="text-danger fw-medium"> - ¡Límite alcanzado!</span>
                                                        }
                                                    </div>
                                                }
                                                @if (estadoPropuestasOfrecida.HasValue)
                                                {
                                                    <div class="mb-1">
                                                        <span class="badge @(limiteOfrecidaAlcanzado ? "bg-danger" : "bg-success") me-1">
                                                            @estadoPropuestasOfrecida.Value.Activas/@estadoPropuestasOfrecida.Value.Maximo
                                                        </span>
                                                        <span>Tu prenda ofrecida</span>
                                                        @if (limiteOfrecidaAlcanzado)
                                                        {
                                                            <span class="text-danger fw-medium"> - ¡Límite alcanzado!</span>
                                                        }
                                                    </div>
                                                }
                                            </div>

                                            @if (algunLimiteAlcanzado)
                                            {
                                                <div class="mt-2 p-2 bg-warning-subtle rounded-2 border border-warning">
                                                    <small class="text-warning-emphasis">
                                                        <i class="bi bi-hourglass-split me-1"></i>
                                                        <strong>Sugerencia:</strong> Espera a que alguna propuesta expire o sea respondida antes de crear una nueva.
                                                    </small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="d-flex gap-3 justify-content-end">
                                <button @onclick="Cancelar" class="btn btn-outline-secondary">
                                    <i class="bi bi-x me-1"></i>
                                    Cancelar
                                </button>
                                <button @onclick="EnviarPropuesta" 
                                        disabled="@(!PuedeEnviarPropuesta)"
                                        class="btn btn-primary @(prendaSeleccionadaId > 0 ? "" : "opacity-50")">
                                    <i class="bi bi-send me-1"></i>
                                    Enviar propuesta
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    [Parameter] public int PrendaId { get; set; }

    private Prenda? prendaDestino;
    private List<Prenda> misPrendas = new();
    private int prendaSeleccionadaId = 0;
    private string? mensajeAcompanante;
    private bool isLoading = true;
    private bool mostrarConfirmacion = false;
    private string? mensajeError = null;

    // RF-09: Estado de propuestas activas para ambas prendas
    private (int Activas, int Maximo)? estadoPropuestasSolicitada;
    private (int Activas, int Maximo)? estadoPropuestasOfrecida;

    protected override async Task OnParametersSetAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        mensajeError = null;

        try
        {
            // Cargar prenda destino
            prendaDestino = await ProponerTruequeService.ObtenerPrendaDestino(PrendaId);

            if (prendaDestino != null)
            {
                // Cargar mis prendas disponibles
                var currentUser = await AuthenticationStateProvider.GetCurrentUserAsync();
                if (currentUser != null)
                {
                    misPrendas = await ProponerTruequeService.ObtenerMisPrendasDisponibles(currentUser.UsuarioId);

                    // RF-09: Verificar estado de propuestas para la prenda solicitada
                    estadoPropuestasSolicitada = await ProponerTruequeService.ObtenerEstadoPropuestasPrenda(PrendaId);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos: {ex.Message}");
            mensajeError = "Error al cargar los datos. Por favor, recarga la página.";
        }
        finally
        {
            isLoading = false;
        }
    }

    // RF-09: Actualizar estado de propuestas cuando se selecciona una prenda ofrecida
    private async Task ActualizarEstadoPrendaOfrecida()
    {
        if (prendaSeleccionadaId > 0)
        {
            try
            {
                estadoPropuestasOfrecida = await ProponerTruequeService.ObtenerEstadoPropuestasPrenda(prendaSeleccionadaId);
                mensajeError = null;
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al obtener estado de propuestas: {ex.Message}");
                estadoPropuestasOfrecida = null;
            }
        }
        else
        {
            estadoPropuestasOfrecida = null;
        }
    }

    // RF-09: Validación del límite de propuestas para ambas prendas
    private bool PuedeEnviarPropuesta =>
        prendaSeleccionadaId > 0 &&
        prendaDestino != null &&
        estadoPropuestasSolicitada.HasValue &&
        estadoPropuestasSolicitada.Value.Activas < estadoPropuestasSolicitada.Value.Maximo &&
        (!estadoPropuestasOfrecida.HasValue || estadoPropuestasOfrecida.Value.Activas < estadoPropuestasOfrecida.Value.Maximo);

    private async Task EnviarPropuesta()
    {
        if (!PuedeEnviarPropuesta || prendaDestino == null) return;

        mensajeError = null;

        try
        {
            var currentUser = await AuthenticationStateProvider.GetCurrentUserAsync();
            if (currentUser == null)
            {
                mensajeError = "Debes iniciar sesión para enviar propuestas.";
                return;
            }

            var resultado = await ProponerTruequeService.CrearPropuesta(
                currentUser.UsuarioId,
                prendaSeleccionadaId,
                PrendaId,
                mensajeAcompanante
            );

            if (resultado.Exito)
            {
                mostrarConfirmacion = true;
            }
            else
            {
                // RF-09: Mostrar mensaje de error descriptivo en la UI
                mensajeError = resultado.Mensaje;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al enviar propuesta: {ex.Message}");
            mensajeError = "Error al enviar la propuesta. Por favor, inténtalo de nuevo.";
        }
    }

    private void Cancelar()
    {
        NavigationManager.NavigateTo($"/detalle-prenda/{PrendaId}");
    }

    private void VolverAExplorar()
    {
        NavigationManager.NavigateTo("/explorar");
    }

    private void VerMisPropuestas()
    {
        NavigationManager.NavigateTo("/propuestas-recibidas");
    }

    private void PublicarPrenda()
    {
        NavigationManager.NavigateTo("/publicar-prenda");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    [Inject]
    private IProponerTruequeService ProponerTruequeService { get; set; } = default!;

    [Inject]
    private CustomAuthenticationStateProvider AuthenticationStateProvider { get; set; } = default!;

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}