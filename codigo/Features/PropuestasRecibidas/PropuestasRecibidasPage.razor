@page "/propuestas-recibidas"
@rendermode InteractiveServer
@attribute [Authorize]
@using TruequeTextil.Features.PropuestasRecibidas.Interfaces
@using TruequeTextil.Shared.Models

<div class="min-vh-100 bg-stone-50">
    <!-- Header -->
    <div class="bg-white border-bottom border-stone-200 sticky-top" style="z-index: 1020;">
        <div class="container-fluid" style="max-width: 80rem;">
            <div class="d-flex align-items-center justify-content-between py-3 px-3">
                <h1 class="text-stone-900 fw-medium mb-0 fs-6">Propuestas de trueque</h1>

                <div class="d-flex gap-2">
                    <button @onclick='() => CambiarVista("recibidas")'
                        class="btn @(vistaActual == "recibidas" ? "btn-primary text-white" : "btn-outline-secondary") btn-sm rounded-3 fw-medium">
                        Recibidas
                        @if (contadorPendientes > 0)
                        {
                            <span class="badge bg-danger ms-1">@contadorPendientes</span>
                        }
                    </button>
                    <button @onclick='() => CambiarVista("enviadas")'
                        class="btn @(vistaActual == "enviadas" ? "btn-primary text-white" : "btn-outline-secondary") btn-sm rounded-3 fw-medium">
                        Enviadas
                    </button>
                </div>
            </div>

            <!-- Filtros -->
            <div class="d-flex gap-2 px-3 pb-3">
                <button @onclick='() => FiltrarPor("todas")'
                    class="btn @(filtroActual == "todas" ? "btn-primary-100 text-amber-800 border-amber" : "btn-outline-secondary text-stone-700") btn-sm rounded-3 fw-medium">
                    Todas
                </button>
                <button @onclick='() => FiltrarPor("pendientes")'
                    class="btn @(filtroActual == "pendientes" ? "btn-primary-100 text-amber-800 border-amber" : "btn-outline-secondary text-stone-700") btn-sm rounded-3 fw-medium">
                    <i class="bi bi-clock me-1"></i>Pendientes
                </button>
                <button @onclick='() => FiltrarPor("aceptadas")'
                    class="btn @(filtroActual == "aceptadas" ? "btn-primary-100 text-amber-800 border-amber" : "btn-outline-secondary text-stone-700") btn-sm rounded-3 fw-medium">
                    <i class="bi bi-check-circle me-1"></i>Aceptadas
                </button>
            </div>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="container-fluid p-4" style="max-width: 80rem;">
        @if (cargando)
        {
            <div class="d-flex justify-content-center align-items-center py-5">
                <div class="text-center">
                    <div class="spinner-border text-amber-600" role="status" style="width: 4rem; height: 4rem;">
                        <span class="visually-hidden">Cargando propuestas...</span>
                    </div>
                    <p class="text-stone-600 mt-3">Cargando propuestas...</p>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(mensajeError))
        {
            <div class="alert alert-danger d-flex align-items-center gap-3 mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                <span>@mensajeError</span>
            </div>
        }
        else if (!string.IsNullOrEmpty(mensajeExito))
        {
            <div class="alert alert-success d-flex align-items-center gap-3 mb-4" role="alert">
                <i class="bi bi-check-circle-fill text-success"></i>
                <span>@mensajeExito</span>
            </div>
        }

        @if (propuestasFiltradas.Count > 0)
        {
            <div class="vstack gap-4">
                @foreach (var propuesta in propuestasFiltradas)
                {
                    <div class="card border-stone-200 rounded-4 overflow-hidden shadow-sm">
                        <!-- Cabecera -->
                        <div class="card-header bg-white border-bottom border-stone-100 p-3 d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-3">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(propuesta.UsuarioProponente?.UrlFotoPerfil))
                                    {
                                        <img src="@propuesta.UsuarioProponente.UrlFotoPerfil" alt="Foto"
                                            class="rounded-circle object-fit-cover" style="width: 2.5rem; height: 2.5rem;" />
                                    }
                                    else
                                    {
                                        <div class="bg-amber rounded-circle d-flex align-items-center justify-content-center text-white fw-medium"
                                            style="width: 2.5rem; height: 2.5rem;">
                                            @(propuesta.UsuarioProponente?.Nombre?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>
                                    }
                                </div>

                                <div>
                                    <h3 class="text-stone-900 fw-medium mb-0 fs-6">
                                        @(vistaActual == "recibidas" ? propuesta.UsuarioProponente?.Nombre : propuesta.UsuarioReceptor?.Nombre ?? "Usuario")
                                    </h3>
                                    <div class="d-flex align-items-center gap-2 small text-stone-500 mt-1">
                                        <span>@FormatearFecha(propuesta.FechaPropuesta)</span>
                                        @if (propuesta.FechaExpiracion.HasValue && propuesta.EstadoPropuestaId == 1)
                                        {
                                            <span>|</span>
                                            <span class="@(EstaProximaAExpirar(propuesta.FechaExpiracion.Value) ? "text-warning" : "")">
                                                <i class="bi bi-clock"></i> Expira @FormatearTiempoRestante(propuesta.FechaExpiracion.Value)
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <span class="badge @ObtenerClaseEstado(propuesta.EstadoPropuestaId) small fw-medium rounded-pill px-3">
                                @ObtenerTextoEstado(propuesta.EstadoPropuestaId)
                            </span>
                        </div>

                        <!-- Contenido -->
                        <div class="card-body p-3">
                            <div class="row row-cols-1 row-cols-md-3 g-3 mb-3">
                                <!-- Prenda ofrecida -->
                                <div class="col">
                                    <div class="card border-stone-200 rounded-3 h-100">
                                        <div class="card-body p-3">
                                            <p class="small text-stone-500 mb-2 fw-medium">
                                                @(vistaActual == "recibidas" ? "Te ofrece:" : "Ofreces:")
                                            </p>
                                            <div class="d-flex align-items-center gap-3">
                                                @if (!string.IsNullOrEmpty(propuesta.PrendaOfrecida?.ImagenPrincipal) && propuesta.PrendaOfrecida.ImagenPrincipal.StartsWith("data:"))
                                                {
                                                    <img src="@propuesta.PrendaOfrecida.ImagenPrincipal" alt="@propuesta.PrendaOfrecida.TituloPublicacion"
                                                        class="rounded-3 object-fit-cover flex-shrink-0" style="width: 4rem; height: 4rem;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-gradient rounded-3 d-flex align-items-center justify-content-center flex-shrink-0"
                                                        style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #f5f5f4 0%, #fef3c7 100%);">
                                                        <i class="bi bi-image fs-4 text-stone-400"></i>
                                                    </div>
                                                }

                                                <div class="flex-grow-1">
                                                    <h4 class="text-stone-900 small fw-medium mb-1 text-truncate">
                                                        @(propuesta.PrendaOfrecida?.TituloPublicacion ?? "Prenda")
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Flecha -->
                                <div class="col d-flex align-items-center justify-content-center">
                                    <div class="bg-stone-100 rounded-circle d-flex align-items-center justify-content-center" style="width: 2rem; height: 2rem;">
                                        <i class="bi bi-arrow-left-right text-stone-400"></i>
                                    </div>
                                </div>

                                <!-- Prenda solicitada -->
                                <div class="col">
                                    <div class="card border-stone-200 rounded-3 h-100">
                                        <div class="card-body p-3">
                                            <p class="small text-stone-500 mb-2 fw-medium">
                                                @(vistaActual == "recibidas" ? "Por tu:" : "Solicitas:")
                                            </p>
                                            <div class="d-flex align-items-center gap-3">
                                                @if (!string.IsNullOrEmpty(propuesta.PrendaSolicitada?.ImagenPrincipal) && propuesta.PrendaSolicitada.ImagenPrincipal.StartsWith("data:"))
                                                {
                                                    <img src="@propuesta.PrendaSolicitada.ImagenPrincipal" alt="@propuesta.PrendaSolicitada.TituloPublicacion"
                                                        class="rounded-3 object-fit-cover flex-shrink-0" style="width: 4rem; height: 4rem;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-gradient rounded-3 d-flex align-items-center justify-content-center flex-shrink-0"
                                                        style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #f5f5f4 0%, #fef3c7 100%);">
                                                        <i class="bi bi-image fs-4 text-stone-400"></i>
                                                    </div>
                                                }

                                                <div class="flex-grow-1">
                                                    <h4 class="text-stone-900 small fw-medium mb-1 text-truncate">
                                                        @(propuesta.PrendaSolicitada?.TituloPublicacion ?? "Prenda")
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(propuesta.MensajeAcompanante))
                            {
                                <div class="bg-stone-50 p-3 rounded-3 border border-stone-200 mb-3">
                                    <p class="small text-stone-700 fst-italic mb-0">"@propuesta.MensajeAcompanante"</p>
                                </div>
                            }

                            <!-- Acciones -->
                            <div class="d-flex gap-2 flex-wrap">
                                <a href="/detalle-propuesta/@propuesta.PropuestaId"
                                    class="btn btn-outline-secondary flex-grow-1 py-2 rounded-3 fw-medium d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-eye"></i>
                                    <span>Ver detalles</span>
                                </a>

                                @if (vistaActual == "recibidas" && propuesta.EstadoPropuestaId == 1)
                                {
                                    <button @onclick="() => AceptarPropuesta(propuesta.PropuestaId)"
                                        class="btn btn-success flex-grow-1 py-2 rounded-3 fw-medium d-flex align-items-center justify-content-center gap-2"
                                        disabled="@procesando">
                                        <i class="bi bi-check-circle"></i>
                                        <span>Aceptar</span>
                                    </button>

                                    <button @onclick="() => RechazarPropuesta(propuesta.PropuestaId)"
                                        class="btn btn-outline-danger flex-grow-1 py-2 rounded-3 fw-medium d-flex align-items-center justify-content-center gap-2"
                                        disabled="@procesando">
                                        <i class="bi bi-x-circle"></i>
                                        <span>Rechazar</span>
                                    </button>
                                }
                                else if (vistaActual == "enviadas" && propuesta.EstadoPropuestaId == 1)
                                {
                                    <button @onclick="() => CancelarPropuesta(propuesta.PropuestaId)"
                                        class="btn btn-outline-secondary flex-grow-1 py-2 rounded-3 fw-medium d-flex align-items-center justify-content-center gap-2"
                                        disabled="@procesando">
                                        <i class="bi bi-x-lg"></i>
                                        <span>Cancelar</span>
                                    </button>
                                }
                                else if (propuesta.EstadoPropuestaId == 2)
                                {
                                    <a href="/mensajes/chat/@propuesta.PropuestaId"
                                        class="btn btn-primary text-white flex-grow-1 py-2 rounded-3 fw-medium d-flex align-items-center justify-content-center gap-2">
                                        <i class="bi bi-chat-dots"></i>
                                        <span>Ir al chat</span>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (!cargando)
        {
            <div class="card border-stone-200 rounded-4 shadow-sm p-5 text-center">
                <div class="bg-stone-100 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 4rem; height: 4rem;">
                    <i class="bi bi-arrow-repeat fs-2 text-stone-400"></i>
                </div>
                <h3 class="text-stone-900 fw-medium mb-2 fs-5">
                    @(vistaActual == "recibidas" ? "No tienes propuestas recibidas" : "No has enviado propuestas")
                </h3>
                <p class="text-stone-600 mb-4 mx-auto" style="max-width: 28rem;">
                    @(vistaActual == "recibidas"
                        ? "Cuando alguien quiera intercambiar por alguna de tus prendas, aparecera aqui"
                        : "Explora prendas y propone un trueque")
                </p>
                <a href="/explorar"
                    class="btn btn-primary text-white px-4 py-2 rounded-3 fw-medium d-inline-flex align-items-center gap-2 mx-auto">
                    <i class="bi bi-search"></i>
                    <span>Explorar prendas</span>
                </a>
            </div>
        }
    </div>

    <!-- Espaciado para navegacion movil -->
    <div class="d-md-none" style="height: 5rem;"></div>
</div>

@code {
    private List<PropuestaTrueque> propuestas = new();
    private string vistaActual = "recibidas";
    private string filtroActual = "todas";
    private bool cargando = true;
    private bool procesando = false;
    private string? mensajeError = null;
    private string? mensajeExito = null;
    private int usuarioActualId = 0;
    private int contadorPendientes = 0;

    private List<PropuestaTrueque> propuestasFiltradas => filtroActual switch
    {
        "pendientes" => propuestas.Where(p => p.EstadoPropuestaId == 1).ToList(),
        "aceptadas" => propuestas.Where(p => p.EstadoPropuestaId == 2).ToList(),
        _ => propuestas
    };

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        mensajeError = null;

        try
        {
            var user = await PropuestasRecibidasService.GetCurrentUser();
            if (user == null)
            {
                NavigationManager.NavigateTo("/login");
                return;
            }

            usuarioActualId = user.UsuarioId;
            contadorPendientes = await PropuestasRecibidasService.ContarPropuestasPendientes(usuarioActualId);

            if (vistaActual == "recibidas")
            {
                propuestas = await PropuestasRecibidasService.ObtenerPropuestasRecibidas(usuarioActualId);
            }
            else
            {
                propuestas = await PropuestasRecibidasService.ObtenerPropuestasEnviadas(usuarioActualId);
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar las propuestas: {ex.Message}";
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task CambiarVista(string vista)
    {
        vistaActual = vista;
        filtroActual = "todas";
        await CargarDatos();
    }

    private void FiltrarPor(string filtro)
    {
        filtroActual = filtro;
    }

    // RF-10: Aceptar propuesta
    private async Task AceptarPropuesta(int propuestaId)
    {
        procesando = true;
        mensajeError = null;
        mensajeExito = null;

        try
        {
            var (exito, mensaje) = await PropuestasRecibidasService.AceptarPropuesta(propuestaId, usuarioActualId);

            if (exito)
            {
                mensajeExito = mensaje;
                await CargarDatos();
            }
            else
            {
                mensajeError = mensaje;
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al aceptar la propuesta: {ex.Message}";
        }
        finally
        {
            procesando = false;
        }
    }

    // RF-11: Rechazar propuesta
    private async Task RechazarPropuesta(int propuestaId)
    {
        procesando = true;
        mensajeError = null;
        mensajeExito = null;

        try
        {
            var (exito, mensaje) = await PropuestasRecibidasService.RechazarPropuesta(propuestaId, usuarioActualId);

            if (exito)
            {
                mensajeExito = mensaje;
                await CargarDatos();
            }
            else
            {
                mensajeError = mensaje;
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al rechazar la propuesta: {ex.Message}";
        }
        finally
        {
            procesando = false;
        }
    }

    private async Task CancelarPropuesta(int propuestaId)
    {
        procesando = true;
        mensajeError = null;
        mensajeExito = null;

        try
        {
            var (exito, mensaje) = await PropuestasRecibidasService.CancelarPropuesta(propuestaId, usuarioActualId);

            if (exito)
            {
                mensajeExito = mensaje;
                await CargarDatos();
            }
            else
            {
                mensajeError = mensaje;
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cancelar la propuesta: {ex.Message}";
        }
        finally
        {
            procesando = false;
        }
    }

    private string ObtenerTextoEstado(int estadoId) => estadoId switch
    {
        1 => "Pendiente",
        2 => "Aceptada",
        3 => "Rechazada",
        4 => "Contraoferta",
        5 => "Expirada",
        6 => "Completada",
        7 => "Cancelada",
        _ => "Desconocido"
    };

    private string ObtenerClaseEstado(int estadoId) => estadoId switch
    {
        1 => "bg-warning-subtle text-warning-emphasis",
        2 => "bg-success-subtle text-success-emphasis",
        3 => "bg-danger-subtle text-danger-emphasis",
        5 => "bg-secondary-subtle text-secondary-emphasis",
        6 => "bg-primary-subtle text-primary-emphasis",
        7 => "bg-secondary-subtle text-secondary-emphasis",
        _ => "bg-secondary-subtle text-secondary-emphasis"
    };

    private string FormatearFecha(DateTime fecha)
    {
        var diff = DateTime.Now - fecha;
        if (diff.TotalMinutes < 60) return $"Hace {(int)diff.TotalMinutes} min";
        if (diff.TotalHours < 24) return $"Hace {(int)diff.TotalHours} horas";
        if (diff.TotalDays < 7) return $"Hace {(int)diff.TotalDays} dias";
        return fecha.ToString("dd/MM/yyyy");
    }

    private string FormatearTiempoRestante(DateTime fechaExpiracion)
    {
        var diff = fechaExpiracion - DateTime.Now;
        if (diff.TotalDays < 0) return "Expirada";
        if (diff.TotalHours < 24) return $"en {(int)diff.TotalHours}h";
        return $"en {(int)diff.TotalDays} dias";
    }

    private bool EstaProximaAExpirar(DateTime fechaExpiracion)
    {
        return (fechaExpiracion - DateTime.Now).TotalHours < 48;
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    [Inject]
    private IPropuestasRecibidasService PropuestasRecibidasService { get; set; } = default!;
}