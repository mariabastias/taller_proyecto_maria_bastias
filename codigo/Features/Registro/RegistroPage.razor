@page "/registro"
@rendermode InteractiveServer

@using TruequeTextil.Features.Registro.Interfaces
@using TruequeTextil.Shared.Components

<div class="min-vh-100 bg-stone-50 d-flex align-items-center justify-content-center">
    <div class="w-100" style="max-width: 480px;">
        <div class="bg-white rounded-4 shadow p-4 p-md-5 pt-md-4">
            <!-- Header -->
            <div class="text-center mb-4">
                <div class="bg-amber-100 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                    <svg class="text-amber-600" style="width: 32px; height: 32px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                </div>
                <h1 class="fs-3 fw-bold text-stone-900 mb-2">Unete a la comunidad</h1>
                <p class="text-stone-600 mb-0">Crea tu cuenta y comienza a intercambiar prendas</p>
            </div>

            <!-- Formulario -->
            <EditForm Model="@formModel" OnValidSubmit="Registrar">
                <DataAnnotationsValidator />

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                        <svg class="me-2" style="width: 20px; height: 20px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                clip-rule="evenodd"></path>
                        </svg>
                        @errorMessage
                    </div>
                }

                <!-- Nombre -->
                <div class="mb-3">
                    <label for="nombre" class="form-label fw-medium text-stone-700">Nombre *</label>
                    <InputText id="nombre" @bind-Value="formModel.Nombre"
                               class="form-control form-control-lg"
                               placeholder="Ingrese su nombre" />
                </div>

				<!-- Apellido -->
                <div class="mb-3">
                    <label for="apellido" class="form-label fw-medium text-stone-700">Apellido *</label>
                    <InputText id="apellido" @bind-Value="formModel.Apellido"
                               class="form-control form-control-lg"
                               placeholder="Ingrese su apellido" />
                </div>

                <!-- Email con validacion -->
                <div class="mb-3">
                    <label for="email" class="form-label fw-medium text-stone-700">Correo electronico *</label>
                    <div class="position-relative">
                        <InputText id="email" @bind-Value="formModel.Email"
                            class="form-control form-control-lg"
                            placeholder="tu@email.com" @oninput="ValidarEmail" />
                        @if (emailValidado != null)
                        {
                            <div class="position-absolute end-0 top-50 translate-middle-y me-3">
                                @if (emailValidado == true)
                                {
                                    <svg class="text-success" style="width: 20px; height: 20px;" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="text-danger" style="width: 20px; height: 20px;" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Contrasena -->
                <div class="mb-3">
                    <label for="password" class="form-label fw-medium text-stone-700">Contrasena *</label>
                    <InputText id="password" @bind-Value="formModel.Password" type="password"
                        class="form-control form-control-lg"
                        placeholder="••••••••" @oninput="ValidarPassword" />
                    @if (formModel.Password.Length > 0)
                    {
                        <div class="mt-2 d-grid gap-2">
                            @foreach (var req in passwordRequirements)
                            {
                                <div class="d-flex align-items-center small">
                                    @if (req.Met)
                                    {
                                        <svg class="text-success me-2" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        <span class="text-stone-700">@req.Text</span>
                                    }
                                    else
                                    {
                                        <svg class="text-secondary me-2" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        <span class="text-stone-500">@req.Text</span>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Confirmar contrasena -->
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label fw-medium text-stone-700">Confirmar contrasena *</label>
                    <InputText id="confirmPassword" @bind-Value="formModel.ConfirmPassword" type="password"
                        class="form-control form-control-lg"
                        placeholder="••••••••" />
                    @if (formModel.ConfirmPassword.Length > 0 && formModel.Password != formModel.ConfirmPassword)
                    {
                        <div class="d-flex align-items-center mt-1 small text-danger">
                            <svg class="me-1" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            Las contrasenas no coinciden
                        </div>
                    }
                </div>

                <!-- Region -->
                <div class="mb-3">
                    <label for="region" class="form-label fw-medium text-stone-700">Region *</label>
                    <RegionDropdown @bind-SelectedRegionId="selectedRegionId" class="w-100" />
                </div>

                <!-- Comuna -->
                <div class="mb-3">
                    <label for="comuna" class="form-label fw-medium text-stone-700">Comuna *</label>
                    <ComunaDropdown SelectedRegionId="selectedRegionId" @bind-SelectedComunaId="formModel.ComunaId" class="w-100" />
                </div>

                <!-- Boton de registro -->
                <button type="submit"
                    class="btn btn-lg w-100 text-white fw-medium bg-amber-600"
                    style="--bs-btn-hover-bg: var(--amber-700);"
                    disabled="@(!FormularioValido() || isLoading)">
                    @if (isLoading)
                    {
                        <span class="d-flex align-items-center justify-content-center">
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            Creando cuenta...
                        </span>
                    }
                    else
                    {
                        <span>Crear cuenta</span>
                    }
                </button>
            </EditForm>

            <!-- Footer -->
            <div class="mt-4">
                <p class="small text-stone-500 text-center">
                    Al registrarte, aceptas nuestros
                    <button class="btn btn-link btn-sm text-amber-600 text-decoration-underline p-0">
                        Terminos y Condiciones
                    </button>
                </p>
                <div class="my-3">
                    <div class="position-relative">
                        <hr class="border-stone-300" />
                        <div class="position-absolute top-50 start-50 translate-middle bg-white px-3">
                            <span class="small text-stone-500">Ya tienes cuenta?</span>
                        </div>
                    </div>
                </div>
                <button @onclick="NavigateToLogin"
                    class="btn btn-outline-secondary btn-lg w-100 fw-medium">
                    Iniciar sesion
                </button>
            </div>

            <!-- Trust indicators -->
            <div class="mt-4 pt-4 border-top border-stone-200">
                <div class="d-flex align-items-center justify-content-center gap-3 small text-stone-500">
                    <div class="d-flex align-items-center">
                        <svg class="text-success me-1" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Datos seguros
                    </div>
                    <div class="d-flex align-items-center">
                        <svg class="text-success me-1" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Verificacion
                    </div>
                    <div class="d-flex align-items-center">
                        <svg class="text-success me-1" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Comunidad
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegistroFormModel formModel = new();
    private bool? emailValidado = null;
    private int selectedRegionId = 0;
    private bool isLoading = false;
    private string? errorMessage = null;

    private class RegistroFormModel
    {
        public string Nombre { get; set; } = "";
        public string Apellido { get; set; } = "";
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
        public int ComunaId { get; set; } = 0;
    }

    private class PasswordRequirement
    {
        public string Text { get; set; } = "";
        public bool Met { get; set; } = false;
    }

    private List<PasswordRequirement> passwordRequirements = new()
    {
        new() { Text = "Minimo 8 caracteres", Met = false },
        new() { Text = "Una mayuscula", Met = false },
        new() { Text = "Un numero", Met = false }
    };

    private void ValidarEmail(ChangeEventArgs e)
    {
        string? email = e.Value?.ToString();
        if (string.IsNullOrEmpty(email))
        {
            emailValidado = null;
            return;
        }

        emailValidado = RegistroService.ValidarFormatoEmail(email);
    }

    private void ValidarPassword(ChangeEventArgs e)
    {
        formModel.Password = e.Value?.ToString() ?? "";

        passwordRequirements[0].Met = formModel.Password.Length >= 8;
        passwordRequirements[1].Met = System.Text.RegularExpressions.Regex.IsMatch(formModel.Password, "[A-Z]");
        passwordRequirements[2].Met = System.Text.RegularExpressions.Regex.IsMatch(formModel.Password, @"\d");
    }

    private bool FormularioValido()
    {
        bool passwordsMatch = formModel.Password == formModel.ConfirmPassword;
        bool passwordValid = passwordRequirements.All(r => r.Met);
        bool emailValid = emailValidado == true;
        bool camposBasicosValidos = !string.IsNullOrEmpty(formModel.Nombre) &&
            !string.IsNullOrEmpty(formModel.Apellido) &&
            !string.IsNullOrEmpty(formModel.Email) &&
            formModel.ComunaId > 0;

        return passwordsMatch && passwordValid && emailValid && camposBasicosValidos;
    }

    private async Task Registrar()
    {
        errorMessage = null;
        isLoading = true;

        try
        {
            var (success, error) = await RegistroService.RegistrarUsuario(
                formModel.Nombre,
                formModel.Apellido,
                formModel.Email,
                formModel.Password,
                formModel.ConfirmPassword,
                formModel.ComunaId);

            if (success)
            {
                // Registro exitoso - redirigir al login
                errorMessage = "¡Registro exitoso! Tu cuenta está verificada. Ahora puedes iniciar sesión.";
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                errorMessage = error ?? "Error al registrar. Por favor, intenta nuevamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al registrar: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    [Inject]
    private IRegistroService RegistroService { get; set; } = default!;
}
