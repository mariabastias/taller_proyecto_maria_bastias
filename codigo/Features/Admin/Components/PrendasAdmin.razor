@rendermode InteractiveServer
@using TruequeTextil.Features.Admin.Interfaces
@using TruequeTextil.Shared.Models
@inject IAdminService AdminService
@inject TruequeTextil.Shared.Services.CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<div>
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div class="d-flex align-items-center gap-3">
            <div class="bg-amber-600 rounded-3 d-flex align-items-center justify-content-center" style="width: 2.5rem; height: 2.5rem;">
                <i class="bi bi-bag text-white"></i>
            </div>
            <div>
                <h1 class="text-dark fs-2 fw-semibold mb-0">Gestion de Prendas</h1>
                <p class="text-muted small mb-0">Administra el catalogo de prendas de la plataforma</p>
            </div>
        </div>

        <div class="d-flex gap-2">
            <div class="position-relative">
                <input type="text" placeholder="Buscar prendas..." @bind="busqueda" @bind:event="oninput" @bind:after="AplicarFiltros"
                    class="form-control ps-5" style="border-radius: 0.5rem;" />
                <i class="bi bi-search position-absolute text-muted" style="left: 0.75rem; top: 50%; transform: translateY(-50%);"></i>
            </div>

            <select class="form-select" style="border-radius: 0.5rem;" @bind="filtroEstado" @bind:after="AplicarFiltros">
                <option value="todos">Todos los estados</option>
                <option value="1">Disponible</option>
                <option value="2">Reservada</option>
                <option value="3">Intercambiada</option>
                <option value="5">Desactivada</option>
            </select>

            <select class="form-select" style="border-radius: 0.5rem;" @bind="filtroCategoria" @bind:after="AplicarFiltros">
                <option value="todos">Todas las categorias</option>
                <option value="Superior">Superior</option>
                <option value="Inferior">Inferior</option>
                <option value="Calzado">Calzado</option>
                <option value="Accesorios">Accesorios</option>
            </select>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-amber-600" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Tabla de prendas -->
        <div class="card bg-white border rounded-3 overflow-hidden shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light border-bottom">
                        <tr>
                            <th class="p-3 text-muted fw-normal small">Prenda</th>
                            <th class="p-3 text-muted fw-normal small">Categoria</th>
                            <th class="p-3 text-muted fw-normal small">Estado</th>
                            <th class="p-3 text-muted fw-normal small">Usuario</th>
                            <th class="p-3 text-muted fw-normal small">Publicada</th>
                            <th class="p-3 text-muted fw-normal small">Reportes</th>
                            <th class="p-3 text-muted fw-normal small text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!prendasFiltradas.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                    No se encontraron prendas
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var prenda in prendasFiltradas)
                            {
                                <tr>
                                    <td class="p-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="bg-light rounded-3 d-flex align-items-center justify-content-center border"
                                                  style="width: 3rem; height: 3rem;">
                                                <i class="bi bi-bag text-muted"></i>
                                            </div>
                                            <div>
                                                <span class="text-dark d-block">@prenda.TituloPublicacion</span>
                                                <span class="text-muted small">Talla: @prenda.Talla</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-3 text-muted">@(prenda.Categoria?.NombreCategoria ?? "Sin categoria")</td>
                                    <td class="p-3">
                                        <span class="@GetEstadoClass(prenda.EstadoPublicacionId) px-2 py-1 rounded-pill small">
                                            @GetEstadoNombre(prenda.EstadoPublicacionId)
                                        </span>
                                    </td>
                                    <td class="p-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="bg-amber-600 rounded-circle d-flex align-items-center justify-content-center text-white small"
                                                  style="width: 2rem; height: 2rem;">
                                                @(prenda.Usuario?.Nombre?.Length > 0 ? prenda.Usuario.Nombre[0].ToString().ToUpper() : "?")
                                            </div>
                                            <span class="text-muted">@(prenda.Usuario?.Nombre ?? "") @(prenda.Usuario?.Apellido ?? "")</span>
                                        </div>
                                    </td>
                                    <td class="p-3 text-muted">@prenda.FechaPublicacion.ToString("dd/MM/yyyy")</td>
                                    <td class="p-3">
                                        @if (prenda.CantidadReportes > 0)
                                        {
                                            <span class="badge bg-danger">@prenda.CantidadReportes</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="p-3 text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            <button @onclick="() => VerDetallePrenda(prenda.PrendaId)"
                                                class="btn btn-sm btn-outline-secondary p-2" style="border-radius: 0.5rem;"
                                                title="Ver detalle">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            @if (prenda.EstadoPublicacionId == 1)
                                            {
                                                <button @onclick="() => AbrirModalDesactivar(prenda)"
                                                    class="btn btn-sm btn-danger p-2" style="border-radius: 0.5rem;"
                                                    title="Desactivar prenda">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginacion -->
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted small">
                Mostrando @((paginaActual - 1) * porPagina + 1)-@Math.Min(paginaActual * porPagina, totalPrendas) de @totalPrendas prendas
            </div>

            @if (totalPaginas > 1)
            {
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="() => CambiarPagina(paginaActual - 1)" disabled="@(paginaActual == 1)">Anterior</button>
                        </li>
                        @for (int i = 1; i <= Math.Min(5, totalPaginas); i++)
                        {
                            var pagina = i;
                            <li class="page-item @(paginaActual == pagina ? "active" : "")">
                                <button class="page-link" @onclick="() => CambiarPagina(pagina)">@pagina</button>
                            </li>
                        }
                        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                            <button class="page-link" @onclick="() => CambiarPagina(paginaActual + 1)" disabled="@(paginaActual == totalPaginas)">Siguiente</button>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    }

    <!-- Modal de detalle -->
    @if (mostrarDetalle && prendaSeleccionada != null)
    {
        <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content bg-white border rounded-3">
                    <div class="modal-header">
                        <h5 class="modal-title text-dark">Detalle de Prenda</h5>
                        <button type="button" class="btn-close" @onclick="CerrarDetalle"></button>
                    </div>

                    <div class="modal-body p-3">
                        <div class="d-flex flex-column gap-3">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <div class="bg-light rounded-3 d-flex align-items-center justify-content-center border"
                                      style="width: 4rem; height: 4rem;">
                                    <i class="bi bi-bag text-muted fs-3"></i>
                                </div>
                                <div>
                                    <h3 class="text-dark h5 mb-1">@prendaSeleccionada.TituloPublicacion</h3>
                                    <p class="text-muted mb-0">@(prendaSeleccionada.Usuario?.Nombre ?? "") @(prendaSeleccionada.Usuario?.Apellido ?? "")</p>
                                </div>
                            </div>

                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <p class="text-muted small mb-1">Categoria</p>
                                    <p class="text-dark mb-0">@(prendaSeleccionada.Categoria?.NombreCategoria ?? "Sin categoria")</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="text-muted small mb-1">Talla</p>
                                    <p class="text-dark mb-0">@prendaSeleccionada.Talla</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="text-muted small mb-1">Estado</p>
                                    <span class="@GetEstadoClass(prendaSeleccionada.EstadoPublicacionId) px-2 py-1 rounded-pill small">
                                        @GetEstadoNombre(prendaSeleccionada.EstadoPublicacionId)
                                    </span>
                                </div>
                                <div class="col-md-6">
                                    <p class="text-muted small mb-1">Fecha publicacion</p>
                                    <p class="text-dark mb-0">@prendaSeleccionada.FechaPublicacion.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <p class="text-muted small mb-1">Descripcion</p>
                                <p class="text-dark bg-light p-3 rounded-3 mb-0">@(prendaSeleccionada.DescripcionPublicacion ?? "Sin descripcion")</p>
                            </div>
                        </div>

                        <div class="border-top pt-3">
                            <p class="text-muted small mb-2">Acciones</p>
                            <div class="d-flex gap-2">
                                <button @onclick="() => VerEnSitio(prendaSeleccionada.PrendaId)"
                                    class="btn btn-outline-secondary">
                                    <i class="bi bi-eye me-1"></i> Ver en sitio
                                </button>
                                @if (prendaSeleccionada.EstadoPublicacionId == 1)
                                {
                                    <button @onclick="() => AbrirModalDesactivar(prendaSeleccionada)"
                                        class="btn btn-danger">
                                        <i class="bi bi-x-circle me-1"></i> Desactivar prenda
                                    </button>
                                }
                                <button @onclick="CerrarDetalle" class="btn btn-secondary">
                                    Cerrar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Modal de desactivacion -->
    @if (mostrarModalDesactivar && prendaADesactivar != null)
    {
        <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content bg-white border rounded-3">
                    <div class="modal-header">
                        <h5 class="modal-title text-dark">Desactivar Prenda</h5>
                        <button type="button" class="btn-close" @onclick="CerrarModalDesactivar"></button>
                    </div>

                    <div class="modal-body p-3">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Esta accion desactivara la prenda y no sera visible para otros usuarios.
                        </div>

                        <p class="text-dark mb-3">
                            Estas a punto de desactivar: <strong>@prendaADesactivar.TituloPublicacion</strong>
                        </p>

                        <div class="mb-3">
                            <label class="form-label text-muted small">Motivo de desactivacion *</label>
                            <textarea @bind="motivoDesactivacion" class="form-control"
                                rows="3" placeholder="Ingresa el motivo de la desactivacion..."></textarea>
                        </div>

                        @if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="alert alert-danger small">@mensajeError</div>
                        }
                        @if (!string.IsNullOrEmpty(mensajeExito))
                        {
                            <div class="alert alert-success small">@mensajeExito</div>
                        }
                    </div>

                    <div class="modal-footer">
                        <button @onclick="CerrarModalDesactivar" class="btn btn-secondary">
                            Cancelar
                        </button>
                        <button @onclick="ConfirmarDesactivacion" class="btn btn-danger" disabled="@procesando">
                            @if (procesando)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-x-circle me-1"></i> Confirmar desactivacion
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool cargando = true;
    private bool procesando = false;
    private bool mostrarDetalle = false;
    private bool mostrarModalDesactivar = false;
    private string busqueda = "";
    private string filtroEstado = "todos";
    private string filtroCategoria = "todos";
    private int paginaActual = 1;
    private int porPagina = 10;
    private int totalPrendas = 0;
    private int totalPaginas = 0;
    private int adminId = 0;

    private string motivoDesactivacion = "";
    private string mensajeError = "";
    private string mensajeExito = "";

    private List<PrendaAdminViewModel> prendas = new();
    private List<PrendaAdminViewModel> prendasFiltradas = new();
    private PrendaAdminViewModel? prendaSeleccionada;
    private PrendaAdminViewModel? prendaADesactivar;

    protected override async Task OnInitializedAsync()
    {
        var usuario = await AuthStateProvider.GetCurrentUserAsync();
        if (usuario == null || (usuario.Rol != "admin" && usuario.Rol != "administrador"))
        {
            NavigationManager.NavigateTo("/");
            return;
        }
        adminId = usuario.UsuarioId;

        await CargarPrendas();
    }

    private async Task CargarPrendas()
    {
        cargando = true;
        try
        {
            var (items, total, paginas) = await AdminService.ObtenerPrendasPaginadas(busqueda, filtroEstado, filtroCategoria, paginaActual, porPagina);

            prendas = items.Select(p => new PrendaAdminViewModel
            {
                PrendaId = p.PrendaId,
                TituloPublicacion = p.TituloPublicacion,
                DescripcionPublicacion = p.DescripcionPublicacion,
                Talla = p.Talla ?? "",
                EstadoPublicacionId = p.EstadoPublicacionId,
                FechaPublicacion = p.FechaPublicacion,
                Categoria = p.Categoria,
                Usuario = p.Usuario,
                CantidadReportes = 0 // Se puede agregar logica para contar reportes
            }).ToList();

            prendasFiltradas = prendas;
            totalPrendas = total;
            totalPaginas = paginas;
        }
        catch (Exception)
        {
            prendas = new List<PrendaAdminViewModel>();
            prendasFiltradas = new List<PrendaAdminViewModel>();
        }
        finally
        {
            cargando = false;
        }
    }

    private void AplicarFiltros()
    {
        paginaActual = 1;
        _ = CargarPrendas();
    }

    private async Task CambiarPagina(int pagina)
    {
        if (pagina < 1 || pagina > totalPaginas) return;
        paginaActual = pagina;
        await CargarPrendas();
    }

    private string GetEstadoClass(int estadoId)
    {
        return estadoId switch
        {
            1 => "bg-success-subtle text-success",
            2 => "bg-warning-subtle text-warning",
            3 => "bg-info-subtle text-info",
            4 => "bg-secondary-subtle text-secondary",
            5 => "bg-danger-subtle text-danger",
            _ => "bg-stone-700 text-stone-300"
        };
    }

    private string GetEstadoNombre(int estadoId)
    {
        return estadoId switch
        {
            1 => "Disponible",
            2 => "Reservada",
            3 => "Intercambiada",
            4 => "Eliminada",
            5 => "Desactivada",
            _ => "Desconocido"
        };
    }

    private void VerDetallePrenda(int id)
    {
        prendaSeleccionada = prendasFiltradas.FirstOrDefault(p => p.PrendaId == id);
        mostrarDetalle = true;
    }

    private void CerrarDetalle()
    {
        mostrarDetalle = false;
        prendaSeleccionada = null;
    }

    private void VerEnSitio(int prendaId)
    {
        NavigationManager.NavigateTo($"/detalle-prenda/{prendaId}");
    }

    private void AbrirModalDesactivar(PrendaAdminViewModel prenda)
    {
        prendaADesactivar = prenda;
        motivoDesactivacion = "";
        mensajeError = "";
        mensajeExito = "";
        mostrarModalDesactivar = true;
        mostrarDetalle = false;
    }

    private void CerrarModalDesactivar()
    {
        mostrarModalDesactivar = false;
        prendaADesactivar = null;
        motivoDesactivacion = "";
        mensajeError = "";
        mensajeExito = "";
    }

    private async Task ConfirmarDesactivacion()
    {
        if (prendaADesactivar == null) return;

        if (string.IsNullOrWhiteSpace(motivoDesactivacion))
        {
            mensajeError = "Debe proporcionar un motivo para desactivar la prenda.";
            return;
        }

        procesando = true;
        mensajeError = "";

        try
        {
            var (exito, mensaje) = await AdminService.DesactivarPrenda(prendaADesactivar.PrendaId, adminId, motivoDesactivacion);

            if (exito)
            {
                mensajeExito = mensaje;
                await Task.Delay(1500);
                CerrarModalDesactivar();
                await CargarPrendas();
            }
            else
            {
                mensajeError = mensaje;
            }
        }
        catch (Exception ex)
        {
            mensajeError = "Error: " + ex.Message;
        }
        finally
        {
            procesando = false;
        }
    }

    private class PrendaAdminViewModel
    {
        public int PrendaId { get; set; }
        public string TituloPublicacion { get; set; } = string.Empty;
        public string? DescripcionPublicacion { get; set; }
        public string Talla { get; set; } = string.Empty;
        public int EstadoPublicacionId { get; set; }
        public DateTime FechaPublicacion { get; set; }
        public CategoriaPrenda? Categoria { get; set; }
        public Usuario? Usuario { get; set; }
        public int CantidadReportes { get; set; }
    }
}
