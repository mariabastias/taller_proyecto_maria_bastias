@page "/admin-verification"
@rendermode InteractiveServer
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization

<div class="min-vh-100 bg-light d-flex align-items-center justify-content-center p-3">
    <div class="card bg-white border shadow" style="max-width: 28rem; width: 100%; border-radius: 1rem;">
        <div class="card-body p-3">
            <!-- Header -->
            <div class="text-center mb-3">
                <div class="bg-amber-600 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center shadow"
                     style="width: 4rem; height: 4rem;">
                    <i class="bi bi-shield-lock fs-2 text-white"></i>
                </div>
                <h1 class="text-dark fs-4 fw-semibold mb-2">Verificación 2FA</h1>
                <p class="text-muted small">Ingresa el código de tu app autenticadora</p>
                <div class="d-flex align-items-center justify-content-center gap-2 mt-2">
                    <i class="bi bi-lock text-muted small"></i>
                    <span class="text-muted small">Autenticación de dos factores</span>
                </div>
            </div>

            <!-- Instrucciones para configurar 2FA -->
            @if (mostrarConfiguracion)
            {
                <div class="alert alert-info bg-info bg-opacity-10 border-info text-info mb-3">
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-info-circle-fill"></i>
                        <div>
                            <strong>Primera vez?</strong>
                            <p class="mb-2 small">Escanea el código QR con tu app autenticadora (Google Authenticator, Authy, etc.)</p>
                            @if (!string.IsNullOrEmpty(totpUri))
                            {
                                <div class="bg-white p-2 rounded text-center mb-2">
                                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=@Uri.EscapeDataString(totpUri)"
                                         alt="QR Code 2FA" class="img-fluid" style="max-width: 150px;" />
                                </div>
                                <p class="text-stone-400 mb-0" style="font-size: 0.7rem;">
                                    O ingresa manualmente: <code class="text-warning">@ObtenerSecretFromUri()</code>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Formulario -->
            <div class="d-flex flex-column gap-3 mb-3">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                    </div>
                }

                <!-- Código TOTP de 6 dígitos -->
                <div class="mb-3">
                    <label for="verificationCode" class="form-label text-muted small fw-medium">Código de 6 dígitos</label>
                    <InputText id="verificationCode" @bind-Value="verificationCode"
                        class="form-control py-2 text-center fs-4 font-monospace"
                        placeholder="000000"
                        maxlength="6"
                        autocomplete="one-time-code"
                        inputmode="numeric" />
                    <p class="text-muted mt-2 mb-0" style="font-size: 0.75rem;">
                        Código generado por tu app autenticadora
                    </p>
                </div>

                <!-- Botón de verificación -->
                <button type="button" @onclick="Verificar"
                    class="btn btn-warning w-100 py-2 shadow mb-3"
                    disabled="@(isLoading || verificationCode.Length != 6)">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Verificando...</span>
                    }
                    else
                    {
                        <i class="bi bi-shield-check me-2"></i>
                        <span>Verificar y Acceder</span>
                    }
                </button>

                <!-- Toggle para mostrar configuración -->
                <button type="button" @onclick="ToggleConfiguracion"
                    class="btn btn-link text-muted text-decoration-none small p-0">
                    <i class="bi bi-qr-code me-1"></i>
                    @(mostrarConfiguracion ? "Ocultar configuración" : "Configurar app autenticadora")
                </button>
            </div>

            <!-- Footer -->
            <div class="mt-3 text-center border-top pt-3">
                <button @onclick="Logout" class="btn btn-link text-muted text-decoration-none small p-0">
                    <i class="bi bi-box-arrow-left me-1"></i> Cerrar sesión
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private string verificationCode = "";
    private bool isLoading = false;
    private string? errorMessage = null;
    private bool mostrarConfiguracion = false;
    private string? totpUri = null;

    protected override async Task OnInitializedAsync()
    {
        // Cargar URI del QR para configuración
        totpUri = await AutenticacionService.ObtenerTotpQrUri();
    }

    private async Task Verificar()
    {
        errorMessage = null;
        isLoading = true;

        try
        {
            var success = await AutenticacionService.PerformAdminVerification(verificationCode);

            if (success)
            {
                // Redirigir al panel administrativo
                NavigationManager.NavigateTo("/admin");
            }
            else
            {
                errorMessage = "Código TOTP incorrecto. Verifica el código de tu app autenticadora.";
                verificationCode = "";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al verificar: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleConfiguracion()
    {
        mostrarConfiguracion = !mostrarConfiguracion;
    }

    private string ObtenerSecretFromUri()
    {
        if (string.IsNullOrEmpty(totpUri)) return "";
        // Extraer secret de la URI otpauth://
        var match = System.Text.RegularExpressions.Regex.Match(totpUri, @"secret=([A-Z2-7]+)");
        return match.Success ? match.Groups[1].Value : "";
    }

    private async Task Logout()
    {
        await AutenticacionService.Logout();
        NavigationManager.NavigateTo("/");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    [Inject]
    private TruequeTextil.Shared.Services.AutenticacionService AutenticacionService { get; set; } = default!;
}
