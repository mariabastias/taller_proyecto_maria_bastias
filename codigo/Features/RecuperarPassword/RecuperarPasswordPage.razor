@page "/recuperar-password"
@rendermode InteractiveServer
@using TruequeTextil.Features.RecuperarPassword.Interfaces

<div class="min-vh-100 bg-stone-50 d-flex align-items-center justify-content-center p-4">
    <div class="w-100" style="max-width: 480px;">
        <div class="bg-white rounded-4 shadow p-4 p-md-5 pt-md-4">
            @if (!emailEnviado)
            {
                <!-- Header -->
                <div class="text-center mb-4">
                    <div class="bg-amber-100 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <svg class="text-amber-600" style="width: 32px; height: 32px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z">
                            </path>
                        </svg>
                    </div>
                    <h1 class="fs-3 fw-bold text-stone-900 mb-2">Recupera tu contrasena</h1>
                    <p class="text-stone-600 mb-0">Ingresa tu correo electronico y te enviaremos un enlace seguro para restablecer tu
                        contrasena</p>
                </div>

                <!-- Formulario -->
                <EditForm Model="@recuperarModel" OnValidSubmit="EnviarEmail">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger small" />

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                            <svg class="me-2" style="width: 20px; height: 20px;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            @errorMessage
                        </div>
                    }

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label fw-medium text-stone-700">Correo electronico</label>
                        <InputText id="email" @bind-Value="recuperarModel.Email"
                            class="form-control form-control-lg"
                            placeholder="tu@email.com" />
                        <ValidationMessage For="@(() => recuperarModel.Email)" class="text-danger small d-block mt-1" />
                    </div>

                    <!-- Informacion de seguridad -->
                    <div class="alert alert-info d-flex align-items-start mb-3" role="alert">
                        <svg class="text-info flex-shrink-1 mt-1 me-2" style="width: 20px; height: 20px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <div class="small">
                            <p class="fw-medium mb-1">Proceso seguro:</p>
                            <ul class="mb-0 ps-3">
                                <li>El enlace sera valido por 1 hora</li>
                                <li>Nunca compartas el enlace con nadie</li>
                                <li>Si no solicitaste esto, ignora el correo</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Boton de enviar -->
                    <button type="submit"
                        class="btn btn-lg w-100 text-white fw-medium bg-amber-600"
                        style="--bs-btn-hover-bg: var(--amber-700);"
                        disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="d-flex align-items-center justify-content-center">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                Enviando enlace...
                            </span>
                        }
                        else
                        {
                            <span>Enviar enlace de recuperacion</span>
                        }
                    </button>
                </EditForm>

                <!-- Footer -->
                <div class="mt-4 text-center">
                    <p class="small text-stone-600">
                        Recordaste tu contrasena?
                        <button @onclick="VolverALogin"
                            class="btn btn-link btn-sm text-amber-600 text-decoration-underline p-0">
                            Inicia sesion
                        </button>
                    </p>
                </div>
            }
            else
            {
                <!-- Confirmacion de envio -->
                <div class="text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <svg class="text-success" style="width: 32px; height: 32px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <h2 class="fs-3 fw-bold text-stone-900 mb-3">Enlace enviado exitosamente</h2>
                    <div class="bg-stone-50 border border-stone-200 rounded-3 p-3 mb-3">
                        <p class="text-stone-700 mb-1">
                            Hemos enviado un enlace de recuperacion seguro a:
                        </p>
                        <p class="text-stone-900 fw-medium fs-5 mb-0">
                            @recuperarModel.Email
                        </p>
                    </div>
                    <div class="alert alert-warning d-flex align-items-start mb-4" role="alert">
                        <svg class="text-warning flex-shrink-1 mt-1 me-2" style="width: 20px; height: 20px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <div class="small text-start">
                            <p class="fw-medium mb-1">Instrucciones importantes:</p>
                            <ul class="mb-0 ps-3">
                                <li>Revisa tu bandeja de entrada y carpeta de spam</li>
                                <li>El enlace expira en 1 hora por seguridad</li>
                                <li>No compartas el enlace con nadie</li>
                                <li>Si no funciona, solicita uno nuevo</li>
                            </ul>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button @onclick="VolverALogin"
                            class="btn btn-lg text-white fw-medium bg-amber-600"
                            style="--bs-btn-hover-bg: var(--amber-700);">
                            Volver a inicio de sesion
                        </button>
                        <button @onclick="ResetForm"
                            class="btn btn-outline-secondary btn-lg fw-medium">
                            Enviar a otro correo
                        </button>
                    </div>
                </div>
            }

            <!-- Trust indicators -->
            <div class="mt-4 pt-4 border-top border-stone-200">
                <div class="d-flex align-items-center justify-content-center gap-3 small text-stone-500">
                    <div class="d-flex align-items-center">
                        <svg class="text-success me-1" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Encriptado
                    </div>
                    <div class="d-flex align-items-center">
                        <svg class="text-success me-1" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Seguro
                    </div>
                    <div class="d-flex align-items-center">
                        <svg class="text-success me-1" style="width: 16px; height: 16px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Temporal
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private class RecuperarPasswordModel
    {
        [Required(ErrorMessage = "El correo electronico es obligatorio")]
        [EmailAddress(ErrorMessage = "El formato del correo electronico no es valido")]
        public string Email { get; set; } = string.Empty;
    }

    private RecuperarPasswordModel recuperarModel = new RecuperarPasswordModel();
    private bool emailEnviado = false;
    private bool isLoading = false;
    private string? errorMessage = null;

    private async Task EnviarEmail()
    {
        errorMessage = null;
        isLoading = true;

        try
        {
            var (success, token) = await RecuperarPasswordService.EnviarEmailRecuperacion(recuperarModel.Email);

            if (success)
            {
                emailEnviado = true;
            }
            else
            {
                errorMessage = "No se pudo enviar el correo de recuperacion. Intenta nuevamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al enviar el correo: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ResetForm()
    {
        emailEnviado = false;
        errorMessage = null;
        recuperarModel = new RecuperarPasswordModel();
    }

    private void VolverALogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    [Inject]
    private IRecuperarPasswordService RecuperarPasswordService { get; set; } = default!;
}
