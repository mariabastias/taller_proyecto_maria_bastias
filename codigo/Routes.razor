@using Microsoft.AspNetCore.Components.Authorization
<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(TruequeTextil.Shared.Components.Layout.MainLayout)">
            <NotAuthorized>
                @if (context.User.Identity?.IsAuthenticated != true)
                {
                    <LayoutView Layout="@typeof(TruequeTextil.Shared.Components.Layout.MainLayout)">
                        <p class="text-center py-4">Debes iniciar sesión para acceder a esta página.</p>
                        <div class="text-center">
                            <a href="/login" class="btn btn-primary">Iniciar Sesión</a>
                        </div>
                    </LayoutView>
                }
                else
                {
                    <LayoutView Layout="@typeof(TruequeTextil.Shared.Components.Layout.MainLayout)">
                        <p class="text-center py-4">No tienes permisos para acceder a esta página.</p>
                    </LayoutView>
                }
            </NotAuthorized>
            <Authorizing>
                <LayoutView Layout="@typeof(TruequeTextil.Shared.Components.Layout.MainLayout)">
                    <p class="text-center py-4">Verificando permisos...</p>
                </LayoutView>
            </Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(TruequeTextil.Shared.Components.Layout.MainLayout)">
            <p class="text-center py-4">Página no encontrada</p>
        </LayoutView>
    </NotFound>
</Router>
